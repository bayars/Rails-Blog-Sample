<p>
  <% @posts.each do |post| %>
  <div class="container anasayfa-menu">
    <div class="row">
      <div class="col-9"><h2><%= post.title %></h2></div>
      <div class="col-4"><%= post.slug %></div>
      <% if post.body.nil?  %>
        <div class="col-9">
          <%= post.body %>
        </div>
      <% else %>
        <div class="col-9">
          <%= raw Markdown.new(post.body.first(200) + "..." ).to_html %>
        </div>
      <% end %>
      <%= link_to('Yazinin Tamami...', {:controller => 'yazilar',:action => 'show', :id => post.id}, :class => 'btn btn-primary btn-xl show') %>
    </div>
  </div>
  <% end %>
</p>
