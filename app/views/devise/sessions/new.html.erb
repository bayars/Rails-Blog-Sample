<div class="parent">
  <div class="login">
    <h2>Log in</h2>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "mail-password" %>:<br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mail-input" %>
    </div>

    <div class="field">
      <%= f.label :password %>:<br />
      <%= f.password_field :password, autocomplete: "current-password", class: "password-input" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="remember-me">
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
    <% end %>
  <!-- <div class="login-button"> -->
      <div class="actions">
        <%= f.submit "Log in", class: "login-button" %>
      </div>
    <% end %>
  <!-- </div> -->
<div class="forgot-password">
  <%= render "devise/shared/links" %>
</div>
</div>
